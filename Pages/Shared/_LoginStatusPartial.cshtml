@if (User.Identity.IsAuthenticated)
{
    <form method="post" class="form-inline" asp-page="/Account/Logout">
        Welcome
        <a asp-page="./Details" asp-route-id="">@User.Identity.Name</a>
        <button type="submit" class="m-lg-2 btn btn-link">Logout</button>
    </form>
}
else 
{
    <a class="btn btn-light" asp-page="/Account/Login">Login</a>
    <a class="btn btn-dark" asp-page="/Users/Create">Sign up</a>
}